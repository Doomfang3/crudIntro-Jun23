<h1>New Recipe</h1>

<form method="POST" action="/recipes/new" style="display: flex; flex-direction: column; align-items: center;">
  <label>Name: <input name="name"></label>
  <label>Difficulty:
    <select name="difficulty">
      <% difficulty.forEach(difOption => { %>
      <option value="<%- difOption %>"><%- difOption %></option>
      <% }) %>
    </select>
  </label>

  <label>Ingredients: <input name="ingredients"></label>
  <label>Duration: <input type="number" name="duration"></label>
  <label>Instructions: <input name="instructions"></label>

  <button type="submit">Create Recipe</button>
</form>